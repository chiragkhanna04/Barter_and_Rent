<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >



        <com.joooonho.SelectableRoundedImageView android:id="@+id/profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultphoto"
            app:sriv_border_color="@color/primary_darker"
            app:sriv_border_width="2dp"
            app:sriv_oval="true"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Personal Profile"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="Name"
            android:padding="10dp" />
        <TextView
            android:id="@+id/tphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:hint="Phone number"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:padding="10dp" />
        <TextView
            android:id="@+id/taddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:hint="Address"
            android:padding="10dp"/>

        <Button android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Edit"
            android:padding="10dp"
            />
    </LinearLayout>





</FrameLayout>
